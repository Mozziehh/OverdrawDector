<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="overdector.com.overdrawdector.MainActivity">

    <Button
        android:id="@+id/overdraw_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="过度绘制探测器"/>
    <Button
        android:id="@+id/overdraw_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overdraw_btn"
        android:text="设置"/>
    <TextView
        android:id="@+id/overdraw_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overdraw_setting"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/overdraw_descp"/>

    <TextView
        android:id="@+id/overdraw_result_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="探测结果："
        android:layout_below="@+id/overdraw_desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/overdraw_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overdraw_result_desc"/>
    <ListView
        android:id="@+id/overdraw_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/overdraw_result"/>
</RelativeLayout>
